# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/hrms_db

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (for payslip emails)
EMAIL_USER=your-email@gmail.com
